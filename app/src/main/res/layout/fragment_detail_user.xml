<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.foodmanagementsystem.mDetailUser.DetailUserFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemName"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="User Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemPrice"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/itemName"
        android:layout_gravity="center"
        android:text="User Email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totoalItemPrice"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/itemPrice"
        android:layout_gravity="center"
        android:text="User Contact"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/totoalItemPrice"
        android:layout_gravity="center"
        android:text="User Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userEmail"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/userName"
        android:layout_gravity="center"
        android:text="User Email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userContact"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/userEmail"
        android:layout_gravity="center"
        android:text="User Contact"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userAddress"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/userContact"
        android:text="User Address"/>

</RelativeLayout>
